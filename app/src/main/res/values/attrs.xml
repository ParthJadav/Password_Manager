<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BottomDrawer">
        <attr name="should_draw_under_status_bar" format="boolean" />
        <attr name="should_draw_content_under_handle_view" format="boolean" />
        <attr name="bottom_sheet_corner_radius" format="dimension" />
        <attr name="bottom_sheet_extra_padding" format="dimension" />
        <attr name="bottom_drawer_background" format="reference" />
    </declare-styleable>

    <declare-styleable name="BottomDrawerDialog">
        <attr name="is_cancelable_on_touch_outside" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ExpandableCardView">
        <attr name="header_view" format="reference"/>
        <attr name="content_view" format="reference"/>
        <attr name="expanded" format="boolean"/>
        <attr name="animation_duration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SimpleExpandableCardView">
        <attr name="icon" format="reference"/>
        <attr name="title" format="string"/>
        <attr name="degreeIconAnimation" format="float"/>
    </declare-styleable>

    <declare-styleable name="ColorSeekBar">
        <attr name="colorSeeds" format="reference" />
        <attr name="barHeight" format="dimension" />
        <attr name="thumbHeight" format="dimension" />
        <attr name="showAlphaBar" format="boolean" />
        <attr name="alphaBarPosition" format="integer" />
        <attr name="colorBarPosition" format="integer" />
        <attr name="bgColor" format="color"/>
        <attr name="barRadius" format="dimension"/>
        <attr name="barMargin" format="dimension"/>
        <attr name="maxPosition" format="integer"/>
        <attr name="isVertical" format="boolean"/>
        <attr name="disabledColor" format="color"/>
        <attr name="showThumb" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PinField">
        <attr name="noOfFields" format="integer" />
        <attr name="distanceInBetween" format="dimension" />
        <attr name="lineThickness" format="dimension" />
        <attr name="fieldColor" format="color" />
        <attr name="highlightColor" format="color" />
        <attr name="highlightEnabled" format="boolean" />
        <attr name="isCustomBackground" format="boolean" />
        <attr name="isCursorEnabled" format="boolean" />
        <!--Single Field Mode is deprecated use highlight type to define how to highlight the fields-->
        <attr name="highlightSingleFieldMode" format="boolean" />
        <attr name="highlightType" format="enum" >
            <enum name="allFields" value="0"/>
            <enum name="currentField" value="1"/>
            <enum name="completedFields" value="2"/>
            <enum name="noFields" value="3"/>
        </attr>
        <attr name="fieldBgColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LinePinField">
        <attr name="bottomTextPaddingDp" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SquarePinField">
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CirclePinField">
        <attr name="circleRadius" format="dimension" />
        <attr name="fillerColor" format="color" />
        <attr name="fillerRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragFromEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SeekBar">
        <attr name="enabled" format="boolean" />
        <attr name="start_progress" format="integer" />
        <attr name="label" format="string" />
        <attr name="back_circle_color" format="color" />
        <attr name="back_circle_disable_color" format="color" />
        <attr name="main_circle_color" format="color" />
        <attr name="main_circle_disable_color" format="color" />
        <attr name="indicator_color" format="color" />
        <attr name="indicator_disable_color" format="color" />
        <attr name="progress_primary_color" format="color" />
        <attr name="progress_primary_disable_color" format="color" />
        <attr name="progress_secondary_color" format="color" />
        <attr name="progress_secondary_disable_color" format="color" />
        <attr name="label_size" format="dimension" />
        <attr name="label_color" format="color" />
        <attr name="label_font" format="string" />
        <attr name="label_style" format="enum" >
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="bold_italic" value="3"/>
        </attr>
        <attr name="label_disabled_color" format="color" />
        <attr name="indicator_width" format="float" />
        <attr name="is_continuous" format="boolean" />
        <attr name="progress_primary_circle_size" format="float" />
        <attr name="progress_secondary_circle_size" format="float" />
        <attr name="progress_primary_stroke_width" format="float" />
        <attr name="progress_secondary_stroke_width" format="float" />
        <attr name="sweep_angle" format="integer" />
        <attr name="start_offset" format="integer" />
        <attr name="max" format="integer" />
        <attr name="min" format="integer" />
        <attr name="main_circle_radius" format="float" />
        <attr name="back_circle_radius" format="float" />
        <attr name="progress_radius" format="float" />
        <attr name="anticlockwise" format="boolean" />
    </declare-styleable>
</resources>