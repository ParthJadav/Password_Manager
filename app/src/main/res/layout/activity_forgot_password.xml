<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".ui.activity.ForgotPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_bottom">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnForgotBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/ic_back_arrow" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btnForgotBack"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="vertical">

            <com.an.customfontview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_26ssp"
                app:textFontPath="fonts/SF-Pro-Display-Bold.ttf" />

            <com.an.customfontview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/otp_message"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12ssp"
                app:textFontPath="fonts/SF-Pro-Display-Regular.ttf" />

            <com.an.customfontview.CustomTextView
                android:id="@+id/edtMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/bg_edittext"
                android:padding="@dimen/_10sdp"
                android:hint="Mobile number"
                android:textColor="@color/colorBlack"
                app:textFontPath="fonts/SF-Pro-Display-Regular.ttf" />


            <ProgressBar
                android:id="@+id/loginProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:indeterminateTint="@color/colorPrimary"
                android:visibility="gone" />


            <com.an.customfontview.CustomButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/bg_login_btn"
                android:text="@string/send"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16ssp" />


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="horizontal">

            <com.an.customfontview.CustomTextView
                android:id="@+id/tv1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_20ssp"
                app:textFontPath="fonts/SF-Pro-Display-Bold.ttf" />

            <com.an.customfontview.CustomTextView
                android:id="@+id/tv2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_20ssp"
                app:textFontPath="fonts/SF-Pro-Display-Bold.ttf" />

            <com.an.customfontview.CustomTextView
                android:id="@+id/tv3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_20ssp"
                app:textFontPath="fonts/SF-Pro-Display-Bold.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="horizontal">

            <com.an.customfontview.CustomTextView
                android:id="@+id/tv4"
                android:layout_width="0dp"
                android:textColor="@color/colorBlack"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:gravity="center"
                android:text="4"
                android:textSize="@dimen/_20ssp"
                app:textFontPath="fonts/SF-Pro-Display-Bold.ttf" />

            <com.an.customfontview.CustomTextView
                android:id="@+id/tv5"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_20ssp"
                app:textFontPath="fonts/SF-Pro-Display-Bold.ttf" />

            <com.an.customfontview.CustomTextView
                android:id="@+id/tv6"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_20ssp"
                app:textFontPath="fonts/SF-Pro-Display-Bold.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="horizontal">

            <com.an.customfontview.CustomTextView
                android:id="@+id/tv7"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:gravity="center"
                android:text="7"
                android:textSize="@dimen/_20ssp"
                app:textFontPath="fonts/SF-Pro-Display-Bold.ttf" />

            <com.an.customfontview.CustomTextView
                android:id="@+id/tv8"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:text="8"
                android:textSize="@dimen/_20ssp"
                app:textFontPath="fonts/SF-Pro-Display-Bold.ttf" />

            <com.an.customfontview.CustomTextView
                android:id="@+id/tv9"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"
                android:background="@drawable/ripple_effect"
                android:gravity="center"
                android:text="9"
                android:textSize="@dimen/_20ssp"
                app:textFontPath="fonts/SF-Pro-Display-Bold.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1" />

            <com.an.customfontview.CustomTextView
                android:id="@+id/tv0"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/colorBlack"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:gravity="center"
                android:text="0"
                android:textSize="@dimen/_20ssp"
                app:textFontPath="fonts/SF-Pro-Display-Bold.ttf" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnNumberBack"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/ic_backspace" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>