<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_toStartOf="@id/cancel"
    android:layout_toLeftOf="@id/cancel"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:tag="@string/click_marker">

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/corner_radius_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp" />

    <com.parthjadav.passwordmanager.utils.ColorSeekBar
        android:id="@+id/colorSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:colorSeeds="@array/material_colors" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/status_bar_accent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Light Status Bar" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/navigation_bar_accent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:checked="false"
        android:text="Navigation Bar" />
